@model ViewOutput
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Zach">
    <meta name="keyword" content="Food panda, Klicker, Event">
    <title>Panda x Klicker</title>
    <link rel="shortcut icon" href="~/images/logo4.png">

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- coming soon styles -->
    <link href="~/css/soon.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/style-responsive.css" rel="stylesheet" />
</head>
<body class="cs-bg">
    <style>
        html, body {
            overflow-x: hidden;
            margin: 0;
            height: 100%;
        }

        /*img {
            width: 100%;
            height: 100%;
            display: block;
        }*/

        .header2 {
            text-align: center;
            font-weight: 600;
            padding-top: 30px;
            padding-bottom: 20px;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .btnMen {
            text-align: center;
            font-size: large;
            font-weight: 600;
            color: #f77af6;
            /*margin: 15px;*/
            padding-top: 50px;
            padding-bottom: 50px;
            width: 100%;
            background-color: rgba(255, 255, 255, 0.5);
            border-radius: 15px;
            box-shadow: 12px 12px 14px #808080;
        }

        .inner_btn {
            text-align: center;
            font-size: medium;
            font-weight: 400;
            color: black;
            padding: 5px;
            width: 40%;
            background-color: rgba(0, 123, 255, 0.2);
            border-radius: 5px;
            box-shadow: 2px 2px 2px #808080;
        }

        .btn:hover {
            background-color: rgba(255, 255, 255, 0.8);
        }
    </style>
    @*<div style="text-align:center;  margin: auto; padding:50px; background-color: rgba(255, 255, 255, 0.5);">*@

    <div class="header2">
        <img src="~/images/logo4.png" style=" width:150px;" />
        <div style="align-content:center;padding-top:10px;">
            @if (!string.IsNullOrEmpty(Model.ErrMsg))
            {
                <div style="margin:10px; font-weight:600; color:red;">
                    @Model.ErrMsg<br />
                </div>
            }
            else
            {
                <div style="margin:10px; font-weight:600; color:white">
                    Welcome @(!string.IsNullOrEmpty(Model.Role) ? ", "+Model.Role+"!" : "")<br />
                </div>
            }
        </div>
    </div>
    @RenderBody()


    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/soon/plugins.js"></script>
    <script src="~/js/soon/custom.js"></script>
</body>
</html>

<script>
    function onClickCurtain() {
        if (document.getElementById("newitem").style.display != "")
            document.getElementById("newitem").style.display = "";
        else
            document.getElementById("newitem").style.display = "none";
    }
</script>